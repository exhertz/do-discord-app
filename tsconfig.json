{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./build",
		"target": "ESNext",
		"module": "esnext",
		"resolveJsonModule": true,
		"inlineSourceMap": true,
		"removeComments": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"experimentalDecorators": true,
    	"noImplicitAny": false
	},
 	"include":[
		"./src/"
	],
	"exclude": [
	  "node_modules"
	]
}